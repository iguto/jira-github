{
  "manifest_version": 2,
  "name": "JiraGithubConnector",
  "version": "0.0.0",

  "description": "connect",

  "browser_action": {
    "default_title": "jira-github",
    "default_popup": "popup/input_id.html"
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/*", "*://*.atlassian.net/*"],
      "js": ["content_scripts/contents_script.js", "content_scripts/jira.js"]
    }
  ],
  "permissions": [
    "*://*.atlassian.net/*",
    "*://github.com/*",
    "tabs",
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html"
  }
}
